<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/aso_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/select_option_btn_top_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/select_photo_background">

        <RelativeLayout

            android:layout_width="360dp"
            android:layout_height="360dp"
            android:gravity="center"
            android:layout_weight="30">

            <RelativeLayout

                android:layout_width="360dp"
                android:layout_height="360dp"
                >
                <ImageView
                    android:id="@+id/PastePhoto"
                    android:layout_width="360dp"
                    android:layout_height="360dp"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:layout_weight="6"
            android:scrollbars="none"
            android:layout_marginTop="85dp">

            <LinearLayout
                android:id="@+id/LinearPasters"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/paster1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/paster_icon1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:onClick="pasterListener1"
                    />
                <ImageView
                    android:id="@+id/paster2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/paster_icon2"
                    android:layout_marginRight="10dp"
                    android:onClick="pasterListener2"
                    />



            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:background="#30363A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:background="#30363A"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left">
                <ImageView
                    android:id="@+id/btn_cancel"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:src="@mipmap/cancel"
                    android:layout_marginTop="15dp"
                    android:onClick="cancelPasterBtnListener"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:background="#30363A"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageView
                    android:id="@+id/btn_ensure"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:src="@mipmap/confirm"
                    android:layout_marginTop="15dp"
                    android:onClick="confirmPasterBtnListener"/>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>