<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/entirety">

    <LinearLayout
        android:id="@+id/topTool"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearComponentSize"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:background="#30363A"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_back"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="right"
            android:background="#30363A"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_save"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearComponentSize"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_weight="18">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFF"
            android:layout_marginTop="@dimen/previewBarHeight"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/template"
            android:layout_marginTop="@dimen/previewBarHeight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#FFF000"
            android:src="@mipmap/type_1"
            />

        <EditText
            android:id="@+id/explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:inputType="textMultiLine"
            android:background="#0000FF"
            android:layout_alignBottom="@+id/template"
            />

        <TextView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/previewBarHeight"
            android:background="@color/test"
            android:text="这是一个可以展开的组件"
            android:onClick="previewListener"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LinearComponentSize"
        android:gravity="center"
        android:layout_weight="3"
        android:background="#30363A">

        <LinearLayout
            android:orientation="horizontal"
            android:background="#30363A"
            android:layout_width="@dimen/LinearComponentSize"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/openPicture"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_picture"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/crop"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_crop"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_picture"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_picture"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_picture"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="#30363A"
            android:layout_width="@dimen/LinearComponentSize"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/newScreen"
                android:layout_width="@dimen/LinearComponentSize"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_new"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

